<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.pornmanut.taskmanager" />

    <bean id="taskManager" class="com.pornmanut.taskmanager.TaskManager" />
    <bean id="taskService" class="com.pornmanut.taskmanager.TaskService" />
    <bean id="taskRepository" class="com.pornmanut.taskmanager.TaskRepository" />
    <bean id="taskController" class="com.pornmanut.taskmanager.TaskController" />
</beans>
